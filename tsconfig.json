{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "jsx": "react",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "noImplicitAny": false,
      "lib": [
        "es2015",
        "es2017",
        "dom"
      ],
      "baseUrl": "src",
      "outDir": "dist"
  },
  "exclude": [
      "node_modules",
      "dist"
  ]
}